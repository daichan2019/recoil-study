{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next out",
    "build": "next build",
    "export": "next export",
    "build:clean": "run-p clean build",
    "export:clean": "run-p clean build export",
    "start": "next start",
    "serve": "run-s build:clean start",
    "prepare": "husky install",
    "check-types": "tsc --noEmit",
    "lint": "next lint --dir src",
    "fix:eslint": "eslint src --ext .js,jsx,.ts,.tsx --fix",
    "fix:prettier": "prettier --write \"**/*.+(js|jsx|json|ts|tsx|css|scss)\"",
    "test-all": "run-s lint check-types fix:*"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "dependencies": {
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.4.0",
    "@tailwindcss/line-clamp": "0.3.0",
    "@tailwindcss/typography": "0.5.0",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "autoprefixer": "10.4.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest-dom": "3.9.2",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-tailwindcss": "1.17.2",
    "eslint-plugin-testing-library": "5.0.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.4",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "tailwindcss": "3.0.7",
    "typescript": "4.5.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  },
  "volta": {
    "node": "16.13.1"
  }
}
